generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String         @id @default(cuid())
  name            String?
  username        String?        @unique
  email           String         @unique
  emailVerified   Boolean?       @default(false)
  image           String?
  bio             String?        @db.Text
  theme           String?        @default("system") // 'light', 'dark', 'system'
  language        String?        @default("en")
  timezone        String?
  isProfilePublic Boolean?       @default(true)
  showEmail       Boolean?       @default(false)
  showStats       Boolean?       @default(true)
  showActivity    Boolean?       @default(true)
  allowDataExport Boolean?       @default(true)
  marketingEmails Boolean?       @default(false)
  securityEmails  Boolean?       @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  sessions        Session[]
  accounts        Account[]
  logs            Log[]
  verifications   Verification[]

  PasswordHash String?

  // Game relations
  createdEvents GameEvent[]
  gameHistories GameHistory[]

  @@index([username]) // Performance optimization for username lookups
  @@index([emailVerified]) // Performance for verified user queries
  @@index([createdAt]) // Performance for user listing by date
  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?

  @@unique([identifier, value])
  @@map("verification")
}

model RateLimit {
  id          String @id @default(cuid())
  key         String @unique
  count       Int    @default(0)
  lastRequest BigInt @default(0)

  @@map("rateLimit")
}

model Log {
  id        String   @id @default(cuid())
  type      String // e.g., 'system', 'monitor', 'token', 'auth'
  message   String
  userId    String? // Optional foreign key to User
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  level     String // e.g., 'info', 'warn', 'error'
  action    String? // e.g., 'login', 'signup', 'password_reset'
  details   String? // Additional JSON string details
  timestamp DateTime @default(now())

  @@index([userId])
  @@index([type])
  @@index([level])
  @@index([timestamp])
  @@map("log")
}

model GameEvent {
  EventID       String   @id @default(cuid())
  CreatorUserID String
  creator       User     @relation(fields: [CreatorUserID], references: [id])
  EventName     String
  Description   String?
  IsActive      Boolean  @default(true)
  CreatedAt     DateTime @default(now())

  // Relations
  prizePools    EventPrizePool[]
  gameHistories GameHistory[]

  @@index([CreatorUserID])
  @@index([IsActive])
  @@index([CreatedAt])
  @@map("Tbl_GameEvent")
}

model EventPrizePool {
  PrizeID      String    @id @default(cuid())
  EventID      String
  Event        GameEvent @relation(fields: [EventID], references: [EventID])
  PrizeName    String
  PrizeValue   Decimal   @db.Decimal(18, 2)
  DisplayOrder Int?
  IsBlank      Boolean   @default(false)

  @@index([EventID])
  @@map("Tbl_EventPrizePool")
}

model GameHistory {
  HistoryID     String    @id @default(cuid())
  EventID       String
  Event         GameEvent @relation(fields: [EventID], references: [EventID])
  PlayerUserID  String
  playerUser    User      @relation(fields: [PlayerUserID], references: [id])
  WonPrizeName  String?
  WonPrizeValue Decimal?  @db.Decimal(18, 2)
  PlayedAt      DateTime  @default(now())

  @@index([EventID])
  @@index([PlayerUserID])
  @@map("Tbl_GameHistory")
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  content   String   @db.Text
  avatar    String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@map("testimonial")
}
